<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/divider_round_5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginVertical" tools:targetApi="o">5dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">15dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">15dp</item>
        <item name="android:drawableTint">?colorOnBackground</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="editTextSimp" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical" tools:targetApi="o">5dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:drawableTint">?colorOnBackground</item>
        <item name="android:background">@null</item>
    </style>

    <style name="outlinedBtn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@drawable/outlined_10dp_round</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText2" parent="editText">
        <item name="android:background">@drawable/round_primaryclr_round_10dp</item>
    </style>

    <style name="Base.Theme.ZakatCalculator.Fullscreen" parent="Base.Theme.CourseTemplate">
        <item name="android:actionBarStyle">
            @style/Widget.Base.Theme.ZakatCalculator.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="Widget.Base.Theme.ZakatCalculator.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="playScrenIcons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/white_tint_bg</item>
        <item name="android:tint">#eee</item>
    </style>


        <style name="constLay">

            <item name="android:layout_height">wrap_content</item>
            <item name="android:padding">10dp</item>
            <item name="android:clickable">true</item>
            <item name="android:focusable">true</item>
            <item name="android:background">?attr/selectableItemBackground</item>

    </style>

    <style name="txtCat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:drawableTint">?colorOnBackground</item>
        <item name="android:drawableEnd">@drawable/angle_right</item>
        <!--        <item name="android:backgroundTint">@color/white</item>-->
    </style>

    <style name="editTextOutlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">10dp</item>
        <item name="android:paddingVertical" tools:targetApi="o">15dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textColorHint">#aaaaaa</item>
        <item name="android:drawableTint">?colorOnBackground</item>
        <item name="android:background">@drawable/outlined_10dp_round</item>
    </style>


        <style name="hintStyle" parent="TextAppearance.AppCompat.Small">
            <item name="android:textColor">?colorOnBackground</item>
            <item name="android:background">?backgroundColor</item> <!-- This might not directly set the background -->
        </style>

    <style name="txtBody16sp">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical" tools:targetApi="o">10dp</item>
        <item name="android:textColor">@color/textBodyColor</item>
    </style>

    <color name="black_overlay">#66000000</color>
</resources>