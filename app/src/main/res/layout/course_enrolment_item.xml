<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:minWidth="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/outlined_10dp_round"
    android:backgroundTint="#22aaaaaa"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:pointerIcon="hand"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView android:id="@+id/icon2"
        android:layout_width="100dp" android:layout_height="100dp"
        android:padding="2dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Small"
        app:strokeWidth="1dp" app:strokeColor="#aaaaaa"
        />
    <TextView android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:text="Business Gold"
        android:layout_marginTop="10dp"
        />

    <TextView android:id="@+id/detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:text="Some details of the course. What it includes and what you will be able to do after learning this."
        />


</LinearLayout>