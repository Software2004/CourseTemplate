<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipToPadding="false"
    android:padding="25dp"
    android:gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/selectable_nav_item_bg_alt"
    android:pointerIcon="hand"
    android:orientation="vertical">
    <com.google.android.material.imageview.ShapeableImageView android:id="@+id/icon"
        android:layout_width="wrap_content" android:layout_height="175dp"
        android:minWidth="300dp" android:maxWidth="300dp"
        android:layout_marginBottom="15dp" android:padding="2dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
        app:strokeWidth="1dp" app:strokeColor="#aaaaaa"/>
    <TextView android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Business Gold"/>
    <TextView android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:layout_marginVertical="10dp"
        android:gravity="center_horizontal"
        android:text="Some details of the course. What it includes and what you will be able to do after learning this."/>
    <com.google.android.material.button.MaterialButton android:id="@+id/btn"
        style="@style/Widget.Material3.Button.OutlinedButton"
        app:cornerRadius="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        app:iconPadding="10dp"
        app:icon="@drawable/lock"
        android:insetLeft="5dp" android:insetRight="5dp"
        android:text="Locked"/>
    <com.google.android.material.button.MaterialButton android:id="@+id/btn1"
        app:cornerRadius="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:visibility="gone"
        android:insetLeft="5dp" android:insetRight="5dp"
        android:textColor="?colorOnPrimary"
        android:text="View Course"/>
</LinearLayout>