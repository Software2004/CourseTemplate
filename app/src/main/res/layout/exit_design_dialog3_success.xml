<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/outlined_10dp_round"
    android:backgroundTint="?backgroundColor"
    android:padding="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_marginTop="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:lottie_rawRes="@raw/succ2"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"/>
    <!-- Title -->
    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success!"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!-- Message -->
    <TextView
        android:id="@+id/befEmailtxt"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Thanks for confirming.\n\nWe have sent you an email, please confirm throught that. And your account will be deleted."
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/emailTxt"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Thanks for using our services. \n\nYour account has been successfylly deleted. You can restore your subscription within next 3 monts.\n"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConfirmQuit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Out Email"
        android:layout_marginTop="15dp"
        app:cornerRadius="8dp"
        />

</LinearLayout>

