<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?backgroundColor"
    android:padding="16dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <!-- Title -->
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provide Password"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <!-- Message -->
        <TextView
            android:id="@+id/tvDialogMessage"
            android:layout_width="wrap_content"
            android:minWidth="400dp"
            android:layout_height="wrap_content"
            android:text="Confirm your password to continue."
            android:paddingVertical="10dp"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/etFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="10dp"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textColorHint="?colorOnBackground"
            android:hint="Enter your password"
            android:background="@drawable/outlined_10dp_round"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            android:inputType="textPassword"/>

        <!-- Options -->
       
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNoLearn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes, Proceed"
                android:layout_marginVertical="10dp"
                app:cornerRadius="8dp"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:id="@+id/btnConfirmQuit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No, Cancel"
                app:cornerRadius="8dp"
               />

    </LinearLayout>

