<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:clipToPadding="false"
    android:padding="25dp" android:gravity="center"
    android:layout_margin="2dp"
    android:background="@drawable/selectable_nav_item_bg_alt"
    android:clickable="true"
    android:focusable="true"
    android:pointerIcon="hand"
    android:orientation="vertical">
    <com.google.android.material.imageview.ShapeableImageView android:id="@+id/icon"
        android:layout_width="75dp" android:layout_height="75dp"
        android:layout_marginBottom="5dp" android:padding="2dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Full"
        app:strokeWidth="1dp" app:strokeColor="#aaaaaa"/>
    <TextView android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Profile"/>
</LinearLayout>