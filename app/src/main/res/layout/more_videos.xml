<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon4"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:padding="2dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraSmall"
        app:strokeWidth="1dp" app:strokeColor="#eee"
        android:background="#222"
        android:layout_marginTop="-10dp"
        app:layout_constraintEnd_toEndOf="@id/icon2"
        app:layout_constraintStart_toStartOf="@id/icon2"
        app:layout_constraintTop_toTopOf="@id/icon2"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon3"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:padding="2dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraSmall"
        app:strokeWidth="1dp" app:strokeColor="#eee"
        android:background="#222"
        android:layout_marginTop="-5dp"
        app:layout_constraintEnd_toEndOf="@id/icon2"
        app:layout_constraintStart_toStartOf="@id/icon2"
        app:layout_constraintTop_toTopOf="@id/icon2"
        />
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon2"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:padding="2dp"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.ExtraSmall"
        app:strokeWidth="1dp" app:strokeColor="#eee"
        android:background="#222"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#eee"
        android:text="More Videos"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@id/icon2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/detail"
        />
    <TextView android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap to see all"
        android:textColor="#eee"
        app:layout_constraintTop_toBottomOf="@id/head"
        app:layout_constraintStart_toStartOf="@id/head"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>